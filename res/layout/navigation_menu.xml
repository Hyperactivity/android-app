<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#d9d9d9"
    android:gravity="bottom">

    <ImageView
        android:id="@+id/navigation_menu_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/active_house"
        android:contentDescription="@string/home_desc"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/navigation_menu_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/non_active_bubble"
        android:contentDescription="@string/home_desc"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/navigation_menu_button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/non_active_star"
        android:contentDescription="@string/home_desc"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/navigation_menu_button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/non_active_search"
        android:contentDescription="@string/home_desc"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/navigation_menu_button_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/non_active_search"
        android:contentDescription="@string/home_desc"
        android:scaleType="centerInside"/>

</LinearLayout>