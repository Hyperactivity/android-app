<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <include android:id="@+id/caption" layout="@layout/caption" />

    <com.hyperactivity.android_app.core.ScrollPicker
            android:id="@+id/diary_categories_surface_view"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="5dp"
            />

    <FrameLayout android:id="@+id/diary_note_list_container"
                 android:layout_width="fill_parent"
                 android:layout_height="0dp"
                 android:background="#000000"
                 android:layout_weight="1" />

    <Button
            android:id="@+id/new_note_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/new_note"
            android:textColor="#f7eded"
            android:layout_gravity="center"
            />

</LinearLayout>