<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <integer name="scroll_picker_categories_text_size">26</integer>
    <integer name="scroll_picker_categories_size">70</integer> <!-- in percent -->

    <color name="fps">#000000</color>
    <color name="background">#ffffff</color> <!-- d9d9d9 -->
    <color name="scroll_picker_categories">#ff0000</color>
    <color name="scroll_picker_categories_text">#000000</color>

    <color name="gray">#d9d9d9</color>

    <style name="admin_button" >
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#ff0000</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

</resources>